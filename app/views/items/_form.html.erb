<%= simple_form_for item do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item</legend>


    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :picture %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.input :units_per_item %>
    <%= f.input :weight %>
    <%= f.input :active %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', admin_items_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>