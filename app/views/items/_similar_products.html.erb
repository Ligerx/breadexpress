<div class="small-12 columns">
  <% Item.for_category(category).each_with_index do |item, index| %>
    <% break if index > 3 %>

    <div class="small-3 columns">
      <%= link_to '', item_path(item), class: 'clickable_div' %>
      <%= render partial: 'partials/item_image', locals: { item: item } %>
      <h4><%= item.name %></h4>
      <h6><%= number_to_currency(item.item_prices.current.first.price) %>
    </div>

  <% end %>
</div>